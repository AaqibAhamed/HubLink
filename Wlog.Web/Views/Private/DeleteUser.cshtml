@model Wlog.Web.Models.User.UserData

@{
    Layout = "~/Views/Shared/_LayoutInternal.cshtml";
}

<div class="row">
    <h2>Delete User</h2>

    <h3>Are you sure you want to delete User?</h3>
    <fieldset>
        <legend></legend>
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-lg-2 control-label">
                    UserName
                </label>
                <div class="col-lg-10">
                    @Html.DisplayFor(model => model.Username, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">
                    Email
                </label>
                <div class="col-lg-10">
                    @Html.DisplayFor(model => model.Email, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">
                    Is Admin
                </label>
                <div class="col-lg-10">
                    @Html.DisplayFor(model => model.IsAdmin, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">
                    Last Login Date
                </label>
                <div class="col-lg-10">
                    @Html.DisplayFor(model => model.LastLoginDate, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">
                    Creation Date
                </label>
                <div class="col-lg-10">
                    @Html.DisplayFor(model => model.CreationDate, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">
                    Is Online
                </label>
                <div class="col-lg-10">
                    @Html.DisplayFor(model => model.IsOnLine, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </fieldset>
    @using (Html.BeginForm("DeleteUser", "Private", FormMethod.Post, new { Id = Model.Id }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false)
        <p>
            @Html.ActionLink("Back to List", "ListUsers", null, new { @class = "btn btn-success  btn-list" })
            <input type="submit" value="Delete" class="btn btn-danger btn-list pull-right" />
        </p>
    }
</div>
