@model Wlog.Web.Models.User.UserData

@{
    Layout = "~/Views/Shared/_LayoutInternal.cshtml";
}




<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><i class="fa fa-user" aria-hidden="true"></i> &nbsp; Delete User: <i>@Model.Username</i></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">

    <h3>Are you sure you want to delete user <i> @Html.DisplayFor(model => model.Username, new { @class = "form-control" }) </i>?</h3>
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-lg-2 control-label">
                        UserName
                    </label>
                    <div class="col-lg-10">
                        <p class="form-control-static ">  @Html.DisplayFor(model => model.Username, new { @class = "form-control" })</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label">
                        Email
                    </label>
                    <div class="col-lg-10">
                        <p class="form-control-static ">  @Html.DisplayFor(model => model.Email, new { @class = "form-control-static" })</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label">
                        Is Admin
                    </label>
                    <div class="col-lg-10">
                        <p class="form-control-static ">    @Html.DisplayFor(model => model.IsAdmin, new { @class = "form-control-static" })</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">
                        Last Login Date
                    </label>
                    <div class="col-lg-10">
                        <p class="form-control-static ">   @Html.DisplayFor(model => model.LastLoginDate, new { @class = "form-control-static" })</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">
                        Creation Date
                    </label>
                    <div class="col-lg-10">
                        <p class="form-control-static ">    @Html.DisplayFor(model => model.CreationDate, new { @class = "form-control-static" })</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 control-label">
                        Is Online
                    </label>
                    <div class="col-lg-10">
                        <p class="form-control-static ">   @Html.DisplayFor(model => model.IsOnLine, new { @class = "form-control" }) </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @using (Html.BeginForm("DeleteUser", "Private", FormMethod.Post, new { Id = Model.Id }))
            {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false)
        <p>
            @Html.ActionLink("Back to List", "ListUsers", null, new { @class = "btn btn-success  btn-list" })
            <input type="submit" value="Delete" class="btn btn-danger btn-list pull-right" />
        </p>
    }

    </div>