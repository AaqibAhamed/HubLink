@model Wlog.Web.Models.ApplicationModel

@{
    Layout = "~/Views/Shared/_LayoutInternal.cshtml";
    ViewBag.Title = "Edit App";
}
<div class="row">
    <h1><i class="fa fa-cog" aria-hidden="true"></i> &nbsp; Edit Application</h1>

    @using (Html.BeginForm("EditApp", "Private", FormMethod.Post, new {@class="form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

       
            @Html.HiddenFor(model => model.IdApplication)

           
                <div class="form-group">
                    @Html.LabelFor(model => model.ApplicationName, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.ApplicationName, new { htmlAttributes = new { @class = "form-control labellength" } })
                     
                    </div>
                    @Html.ValidationMessageFor(model => model.ApplicationName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.PublicKey, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.PublicKey,null, new { @class = "form-control"  , disabled = "disabled", @readonly = "readonly" })
                        
                    </div>
                    @Html.ValidationMessageFor(model => model.PublicKey)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.IsActive, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-1">
                        @Html.EditorFor(model => model.IsActive, new { @class = "form-control pull-left" })
                    </div>
                    <div class="col-sm-9">
                    </div>
                    </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.StartDate, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.StartDate, new { @class = "form-control" })
                     
                    </div>
                    @Html.ValidationMessageFor(model => model.StartDate)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.EndDate, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.EndDate, new { @class = "form-control" })
                        
                    </div>
                    @Html.ValidationMessageFor(model => model.EndDate)
                </div>


                <div class="form-group">
                    <div class="col-sm-2">
                        @Html.ActionLink("Back to List", "ListApps", null, new { @class = "btn btn-success btn-list" })
                    </div>
                    <div class=" col-sm-10">
                        <p>
                           
                            <button type="submit" value="Save" class="btn btn-warning btn-list  pull-right" ><i class="fa fa-floppy-o" aria-hidden="true"></i> &nbsp; Save</button>
                            @Html.ActionLink("Delete", "DeleteApp", new { Id = Model.IdApplication }, new { @class = "btn btn-danger pull-left btn-list" })
                        </p>
                    </div>
                </div>
            <p>
              
               
            </p>
        
    }


    </div>