@model Wlog.Web.Models.LocalPasswordModel.Email

<h3>Change Email</h3>

@using (Html.BeginForm("ChangeEmail", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="form-horizontal">
        <div class="form-group" style="min-height:32px;">
            
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label">
                @Html.LabelFor(m => m.address)
            </label>
            <div class="col-lg-10">
                @Html.EditorFor(model => model.address, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group" style="min-height:32px;">
           
        </div>

    </div>
    <p>
        @Html.ActionLink("Back", "Index", "Private", null, new { @class = "btn btn-success" })
        <input type="submit" value="Change Email" class="btn btn-warning" />
    </p>
}
