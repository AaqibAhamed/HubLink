@model Wlog.Web.Models.Email

<h3>Change Email</h3>

@using (Html.BeginForm("ChangeEmail", "Account", FormMethod.Post,new { @class= "form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

   
        <div class="form-group" style="min-height:32px;">
            
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">
                @Html.LabelFor(m => m.Address)
            </label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Address, new { @class = "form-control" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-2">
                @Html.ActionLink("Back", "Index", "Private", null, new { @class = "btn btn-success" })
            </div>
            <div class=" col-sm-10">
                <p>

                    <input type="submit" value="Change Email" class="btn btn-warning" />
                </p>
            </div>
        </div>


}
