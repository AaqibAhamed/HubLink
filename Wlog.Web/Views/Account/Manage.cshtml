@model Wlog.Web.Models.LocalPasswordModel
@{
    Layout = "~/Views/Shared/_LayoutInternal.cshtml";
    ViewBag.Title = "User Setting";
}

<div class="row">
    <hgroup class="title">
        <h1>@ViewBag.Title</h1>
    </hgroup>
</div>
<div class="row">
    <p>L'utente ha eseguito l'accesso come <strong>@User.Identity.Name</strong>.</p>
    <div class="col-lg-6" style="border-right: solid 1px;">
        @Html.Partial("_ChangePasswordPartial",Model.password)
    </div>
    <div class="col-lg-6">
        @Html.Partial("_ChangeEmailPartial",Model.email)
    </div>
</div>
